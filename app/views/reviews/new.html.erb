<%= simple_form_for [@restaurant, @review], url: restaurant_reviews_path(@restaurant) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], prompt: "Select a rating" %>
  <%= f.button :submit %>
<% end %><div>
  <%= link_to "Back to restaurants", restaurants_path %>
</div>